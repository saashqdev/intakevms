[Unit]
Description=Web application daemon which runs fastapi
Requires=docker.service
After=network.target docker.service

[Service]
Environment="PATH=/opt/aero/intakevms/venv/bin/:/usr/sbin/:/usr/bin/"
Environment="PYTHONPATH=:/opt/aero/intakevms/"
Environment=PYTHONUNBUFFERED=1

ExecStart=/opt/aero/intakevms/venv/bin/python3 -u /opt/aero/intakevms/intakevms/main.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target